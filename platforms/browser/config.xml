<?xml version='1.0' encoding='utf-8'?>
<widget id="com.cloudbric.console" version="1.1.5" versionCode="10015" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>Cloudbric</name>
    <description>Cloudbric</description>
    <author email="ch7@daum.net" href="http://hancoma.com">김대경</author>
    <content src="index.html" />
    <gap:plugin name="cordova-plugin-x-toast" source="npm" />
    <universal-links>
        <host name="cloudbric.page.link" scheme="https" />
        <host name="cloudbric-app.firebaseapp.com" scheme="https">
            <path url="/__/auth/callback" />
        </host>
    </universal-links>
    <icon src="www/icon.png" />
    <access origin="*" />
    <access launch-external="true" origin="tel:*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="orientation" value="portrait" />
    <preference name="phonegap-version" value="cli-7.0.1" />
    <preference name="pgb-builder-version" value="2" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="android-targetSdkVersion" value="26" />
    <preference name="fullscreen" value="false" />
    <preference name="android-windowSoftInputMode" value="adjustResize" />
    <preference name="AndroidLaunchMode" value="singleTask" />
    <preference name="android-build-tool" value="gradle" />
</widget>
